<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.myapplication.MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="214dp"
        android:layout_height="47dp"
        android:text="Enter your name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.723"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/mybutton"
        android:layout_width="163dp"
        android:layout_height="42dp"
        android:text="Click to say..."
        app:layout_constraintBottom_toTopOf="@+id/mytext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/mytext"
        android:layout_width="183dp"
        android:layout_height="46dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="124dp"
        android:text="Xin chào:......"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mybutton" />

    <Button
        android:id="@+id/myb"
        android:layout_width="188dp"
        android:layout_height="61dp"
        android:text="Click to goodbye"
        app:layout_constraintBottom_toTopOf="@+id/myt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mytext"
        app:layout_constraintVertical_bias="0.42000002" />

    <TextView
        android:id="@+id/myt"
        android:layout_width="119dp"
        android:layout_height="41dp"
        android:text="Tạm biệt:......"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myb" />


</android.support.constraint.ConstraintLayout>
